<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/sale_title"
        >

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:src="@mipmap/ic_back" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/textsize18"
            android:text="忘记密码"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/margin_10"
            android:paddingLeft="@dimen/margin_10"
            android:textSize="@dimen/textsize14"
            android:textColor="@color/black_333333"
            android:text="经销商编号"/>

        <EditText
            android:id="@+id/et_servicer_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingLeft="@dimen/padding_10"
            android:inputType="textPassword"
            android:textSize="@dimen/textsize14"
            android:hint="@string/input_service_id"
            android:background="@null"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/margin_10"
            android:paddingLeft="@dimen/margin_10"
            android:textSize="@dimen/textsize14"
            android:textColor="@color/black_333333"
            android:text="身份证号"/>

        <EditText
            android:id="@+id/et_id_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingLeft="@dimen/padding_10"
            android:inputType="textPassword"
            android:textSize="@dimen/textsize14"
            android:hint="@string/input_bank_card"
            android:background="@null"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/margin_10"
            android:paddingLeft="@dimen/margin_10"
            android:textSize="@dimen/textsize14"
            android:textColor="@color/black_333333"
            android:text="手机号"/>

        <EditText
            android:id="@+id/ev_forget_mobile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingLeft="@dimen/padding_10"
            android:inputType="textPassword"
            android:textSize="@dimen/textsize14"
            android:hint="@string/hint_input_mobile"
            android:background="@null"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/margin_10"
            android:paddingLeft="@dimen/margin_10"
            android:textSize="@dimen/textsize14"
            android:textColor="@color/black_333333"
            android:text="新密码"/>

        <EditText
            android:id="@+id/ev_new_psd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingLeft="@dimen/padding_10"
            android:inputType="textPassword"
            android:textSize="@dimen/textsize14"
            android:hint="@string/input_new_psd"
            android:background="@null"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/margin_10"
            android:paddingLeft="@dimen/margin_10"
            android:textSize="@dimen/textsize14"
            android:textColor="@color/black_333333"
            android:text="确认新密码"/>

        <EditText
            android:id="@+id/ev_sure_new_psd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingLeft="@dimen/padding_10"
            android:inputType="textPassword"
            android:textSize="@dimen/textsize14"
            android:hint="@string/psd_sure"
            android:background="@null"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/margin_10"
            android:paddingLeft="@dimen/margin_10"
            android:textSize="@dimen/textsize14"
            android:textColor="@color/black_333333"
            android:text="验证码"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_sms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_20"
                android:paddingLeft="@dimen/padding_10"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_send"
                android:background="@drawable/pay_dialog"
                android:textColorHint="@color/list_divider"
                android:textSize="@dimen/textsize14"
                android:hint="@string/register_input_vcode"/>

            <TextView
                android:id="@+id/tv_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:padding="@dimen/padding_5"
                android:layout_marginRight="@dimen/margin_10"
                android:background="@drawable/shape_bind_card"
                android:text="发送验证码"/>

        </RelativeLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_bg"/>

    <Button
        android:id="@+id/btn_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_30"
        android:layout_marginBottom="@dimen/margin_30"
        android:textColor="@color/white"
        android:background="@drawable/text_shape_commit"
        android:text="@string/modify_sure" />


</LinearLayout>
