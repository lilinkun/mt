<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_bottom_price"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:background="@color/start_intergal_bg"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize14"
                android:text="总分值："
                android:layout_marginLeft="@dimen/margin_10"
                android:textColor="@color/setting_red_color"/>

            <TextView
                android:id="@+id/tv_total_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize14"
                android:textColor="@color/setting_red_color"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize14"
                android:text="总金额：¥"
                android:layout_marginLeft="@dimen/margin_20"
                android:textColor="@color/setting_red_color"/>

            <TextView
                android:id="@+id/tv_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize14"
                android:textColor="@color/setting_red_color"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize14"
                android:text="运费：¥"
                android:layout_marginLeft="@dimen/margin_20"
                android:textColor="@color/setting_red_color"/>

            <TextView
                android:id="@+id/tv_total_ShippingFree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize14"
                android:text="0"
                android:textColor="@color/setting_red_color"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize14"
                android:layout_marginLeft="@dimen/textsize10"
                android:textColor="@color/setting_red_color"
                android:text="实付¥"/>

            <TextView
                android:id="@+id/tv_total_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize16"
                android:textColor="@color/setting_red_color"
                android:text="0"/>

            <TextView
                android:id="@+id/tv_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize14"
                android:textColor="@color/setting_red_color"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right">
                <TextView
                    android:id="@+id/tv_settlement"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:text="@string/jiesuan"
                    android:background="@color/green"
                    android:gravity="center"
                    android:textSize="@dimen/textsize16"
                    android:textColor="@color/white"
                    />
            </LinearLayout>

        </LinearLayout>

</LinearLayout>
