<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:id="@+id/ll_adapter_point"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:gravity="center_vertical"    android:orientation="horizontal">    <TextView        android:id="@+id/tv_date"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:gravity="center"        android:paddingTop="@dimen/padding_5"        android:paddingBottom="@dimen/padding_5"        android:focusable="false"        android:layout_weight="1"        android:background="@drawable/edit_background"/>    <TextView        android:id="@+id/et_point"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:gravity="center"        android:paddingTop="@dimen/padding_5"        android:paddingBottom="@dimen/padding_5"        android:focusable="false"        android:background="@drawable/edit_background"        android:layout_weight="1"/></LinearLayout>