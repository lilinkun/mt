<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_choose_bank"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/register_bank_line"
        android:layout_above="@+id/tv_choose_bank"/>

    <TextView
        android:id="@+id/tv_choose_bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请选择开户银行"
        android:paddingTop="@dimen/margin_10"
        android:paddingBottom="@dimen/margin_10"
        android:gravity="center"
        android:background="@color/pop_bank_tv"
        android:textColor="@color/black_333333"
        android:layout_above="@+id/rv_bank"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_bank"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
